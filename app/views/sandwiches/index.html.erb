<p id="notice"><%= notice %></p>
<%= form_tag("/index", method: "get") do  %>
 <%= select_tag(:sandwich_id, options_from_collection_for_select(Sandwich.all, :id, :description)) %>
 <%= submit_tag("Search") %>
<% end %>
<h1>Listing Sandwiches</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sandwiches.each do |sandwich| %>
      <tr>
        <td><%= sandwich.name %></td>
        <td><%= sandwich.description %></td>
        <td><%= image_tag(sandwich.sandwich_image, class: "sandwich-image ") %>
        <td><%= link_to 'Show', sandwich %></td>
        <td><%= link_to 'Edit', edit_sandwich_path(sandwich) %></td>
        <td><%= link_to 'Destroy', sandwich, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sandwich', new_sandwich_path %>
